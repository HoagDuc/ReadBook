<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp">
    <TextView
        android:id="@+id/Sachmoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DC8787"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Sách mới"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <ListView
        android:layout_marginTop="4dp"
        android:id="@+id/ListHome"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/Sachmoi"
        android:layout_alignParentStart="true"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/Sachhay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListHome"
        android:layout_marginTop="4dp"
        android:background="#DC8787"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Sách hay"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <ListView
        android:layout_marginTop="4dp"
        android:id="@+id/ListHome1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/Sachhay" />







</RelativeLayout>

