<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    tools:context=".CaiDat">

    <RelativeLayout
        android:id="@+id/nav_Caidat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:padding="10dp">

        <ImageView
            android:padding="8dp"
            android:id="@+id/Trolai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/Trolai"
            android:text="Cài đặt"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Dulieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_Caidat"
        android:layout_marginTop="4dp"
        android:background="#DC8787"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Dữ liệu"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>


    <TableLayout
        android:id="@+id/Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dulieu"
        >
        <TableRow>

            <TextView
                android:layout_width="311dp"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Cache"
                android:textColor="#000"
                android:textSize="16sp"></TextView>

            <Button
                android:id="@+id/Xoa"
                android:backgroundTint="#ccc"
                android:text="Xóa"
                android:textColor="#000"></Button>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="246dp"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Dữ liệu ứng dụng"
                android:textColor="#000"
                android:textSize="16sp"></TextView>

            <Button
                android:id="@+id/Xoa1"
                android:layout_width="wrap_content"
                android:backgroundTint="#ccc"
                android:text="Xóa"
                android:textColor="#000"></Button>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/Giaodien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Body"

        android:background="#DC8787"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Giao diện"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TableLayout
        android:id="@+id/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Giaodien"
        android:padding="8dp">

        <TableRow>

            <TextView
                android:layout_width="309dp"
                android:layout_marginLeft="-10dp"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Chế độ màn hình tối"
                android:textColor="#000"
                android:textSize="16sp"></TextView>

            <Switch
                android:id="@+id/Battat"
                android:checked="false"
                android:layout_width="86dp"
                android:layout_height="42dp"
                android:padding="10dp" />
        </TableRow>

    </TableLayout>




</RelativeLayout>

